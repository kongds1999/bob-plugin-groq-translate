        {
          "title": "translate",
          "value": "1"
        },
        {
          "title": "polish",
          "value": "2"
        },
        {
          "title": "chat",
          "value": "3"
        },
        {
          "title": "自定义prompt",
          "value": "4"
        }
      ]
    },
    {
      "identifier": "CustomePrompt",
      "type": "text",
      "title": "CustomPrompt",
      "defaultValue": "",
      "desc": "",
      "textConfig": {
        "type": "visible",
        "height": "60",
        "placeholderText": "选择自定义prompt模式时生效, 在这里输入你的prompt。源语言为${sourceLang}, 目标语言为${targetLang}, 原文为${sourceText}, 译文为${targetText}。"
      }
    }
  ]
